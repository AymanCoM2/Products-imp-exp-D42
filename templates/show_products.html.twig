<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Import Files</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
 <body class="my-5">
      <a href="{{ path('import_form') }}" class="btn btn-primary p-2 m-2">import Data</a> 
      <a href="{{ path('export_data') }}" class="btn btn-primary p-2 m-2">Export Data</a> 
      <div class="container">
        <form method="get" action="">
            <div class="input-group mb-3">
                <input type="text" name="search" class="form-control" placeholder="Search" value="{{ app.request.query.get('search') }}">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </div>
            </div>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th scope="col"><a href="?sort_by=id">id</a></th>
                    <th scope="col"><a href="?sort_by=title">Title</a></th>
                    <th scope="col">Description</th>
                    <th scope="col"><a href="?sort_by=category">category</a></th>
                    <th scope="col">Weight</th>
                </tr>
            </thead>
            <tbody>
              {% for product in pagination.items %}
                <tr>
                    <th>{{ product.id }}</th>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.category }}</td>
                    <td>{{ product.weight }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>
